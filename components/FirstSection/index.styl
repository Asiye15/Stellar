_gray = #636363
_lightGray = #dddddd

.root
  width 100%
  align-items center
  margin-bottom 2u
  border-top-color _lightGray
  border-top-width 1px
  align-self center
  padding 6u 3u 2u 1u

  +tablet()
    padding 8u 6u 4u 3u

  +wide()
    padding 11u 11u 7u 8u

.title
  margin-bottom 10px
  font-size 4u
  color _gray
  font-weight 300

.linearLine
  width 120px
  height 2px
  border-radius 2px
  background-color #a89cc8
  margin 26px 0 26px 26px

  +tablet()
    background-image linear-gradient(90deg, #efa8b0, #a89cc8, #8cc9f0)

.features
  justify-content center
  flex-direction row
  flex-wrap wrap
  margin-bottom 3u

  +tablet()
    margin-bottom 9u

.feature
  margin-left 4u
  align-items center
  width 100%

  +tablet()
    width 44%

  +desktop()
    width 28%

.iconContent
  margin-bottom 4u
  width 140px
  height @width
  border 1px solid _lightGray
  border-radius 140px
  padding 6px

  +tablet()
    width 194px
    height @width
    border-radius 194px
    padding 10px

  +wide()
    width 224px
    height @width
    border-radius 224px
    padding 12px

.iconInside
  align-items center
  justify-content center
  border 1px solid _lightGray
  width 126px
  height  @width
  border-radius 126px

  +tablet()
    width 172px
    height  @width
    border-radius 172px

  +wide()
    width 198px
    height  @width
    border-radius 198px

.icon
  width 80px
  height @width

  +wide()
    width 100px
    height @width

.descriptionTitle
  margin-bottom 2u
  font-size 20px
  color _gray
  font-weight 300

  +wide()
    font-size 3u

.description
  margin-bottom 4u
  line-height 3u
  text-align center
  font-size 2u
  color _gray
  font-weight 300

  +wide()
    font-size 18px

.learnMore
  border 1px solid _lightGray
  border-radius 1u
  padding 0 3u
  margin-left 2u
  justify-content center
  width 100%
  height 44px

  +tablet()
    width 148px
    height 44px

  +wide()
    width 172px
    height 52px

.learnMoreText
  font-size 2u
  color _gray
  font-weight 300
  text-align center

  +wide()
    font-size 18px

