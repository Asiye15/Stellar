_white = #fff
_lightGray = #dddddd

.root
  margin-bottom 2u
  padding 6u 3u 2u 3u

  +tablet()
    padding 8u 6u 4u 6u

  +desktop()
    flex-direction row
    justify-content space-between

  +wide()
    padding 10u 10u 6u 10u

.section
  margin-bottom 6u

  +desktop()
    width 48%
    margin-left 4u

.info
  flex-direction row
  margin-bottom 5u

.rightSection
  margin-right 2u

.subSectionTitle
  font-weight 400
  color _white
  margin-right 2u
  margin-bottom 2u
  font-size 2u

  +wide()
    font-size 18px

.sectionDescription, .descriptionEmail
  color rgba(_white, 0.65)
  font-weight 300
  margin-bottom 2u
  font-size 2u
  flex-wrap wrap

  +wide()
    font-size 18px

.descriptionEmail
  border-bottom 1px dotted rgba(_white, 0.65)
  width 176px

  +desktop()
    width 156px

  +wide()
    width 192px

.title
  color _white
  font-weight 300
  margin-bottom 3u
  font-size 3u

  +desktop()
    font-size 28px

.description
  margin-bottom 5u
  color rgba(_white, 0.65)
  line-height 3u
  font-weight 300
  font-size 2u

  +wide()
    font-size 18px

.learnMore
  border-radius 1u
  border 1px solid _lightGray 
  padding 0 3u
  justify-content center
  width 100%
  height 44px

  +tablet()
    width 148px
    height 44px

  +wide()
    width 172px
    height 52px

.learnMoreText
  color _white
  font-weight 300
  font-size 2u
  text-align center

  +wide()
    font-size 18px

.icons
  flex-direction row
  margin-bottom 4u

.iconInside
  border 1px solid rgba(_white, 0.35)
  align-items center
  justify-content center
  margin-right 12px
  width 5u
  height @width
  border-radius @width

  +wide()
    width 46px
    height @width
    border-radius @width

.icon
  width 20px
  height @width

  +wide()
    width 22px
    height @width

    