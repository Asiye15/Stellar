_gray = #636363
_lightGray = #dddddd

.root
  align-items center
  margin-bottom 2u
  padding 6u 3u 2u 3u

  +tablet()
    padding 8u 6u 4u 6u

  +desktop()
    flex-direction row
    justify-content space-between

  +wide()
    padding 11u 11u 7u 11u

.textBlock
  flex 1
  align-items center
  flex-basis auto
  width 100%

  +desktop()
    order -1
    align-items left

.title
  color _gray
  font-size 32px
  font-weight 300
  margin-bottom 11px

.linearLine
  width 120px
  height 2px
  border-radius 2px
  background-color #a89cc8
  margin 26px 0 37px 0

  +tablet()
    background-image linear-gradient(90deg, #efa8b0, #a89cc8, #8cc9f0)

.description
  margin-bottom 4u
  color _gray
  line-height 3u
  font-weight 300
  font-size 14px
  text-align center

  +tablet()
    font-size 2u
    text-align left

  +desktop()
    text-align left

  +wide()
    font-size 18px

.image
  padding 10px
  border 1px solid _lightGray
  width 206px
  height @width
  margin-bottom 4u
  border-radius 206px

  +tablet()
    width 278px
    height @width
    margin-bottom 4u
    border-radius 278px

  +desktop()
    width 280px
    height @width
    margin-left 8u
    border-radius 280px

  +wide()
    width 325px
    height @width
    margin-left 9u
    border-radius 325px

.phoneImage
  width 100%
  height @width
  border-radius 9999px
  background-color _lightGray

.learnMore
  border-radius 1u
  border 1px solid _lightGray 
  padding 0 3u
  justify-content center
  width 100%
  height 44px

  +tablet()
    width 148px
    height 44px

  +wide()
    width 172px
    height 52px

.learnMoreText
  color _gray
  font-weight 300
  font-size 2u
  text-align center

  +wide()
    font-size 18px

    