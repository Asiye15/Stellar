_white = #fff
_gray = #636363
_lightGray = #dddddd
_lightBlue = #8cc9f0

.root
  align-items center
  border-top-width 1px
  border-top-color _lightGray
  padding 6u 3u 4u 3u

  +tablet()
    padding 8u 6u 4u 6u

  +wide()
    padding 11u 11u 7u 11u

.title
  color _gray
  font-size 32px
  font-weight 300
  margin-bottom 11px

.linearLine
  width 120px
  height 2px
  border-radius 2px
  background-color #a89cc8
  margin 26px 0

  +tablet()
    background-image linear-gradient(90deg, #efa8b0, #a89cc8, #8cc9f0)

.descriptionTitle
  color _gray
  font-weight 300
  text-align center
  font-size 2u
  margin-bottom 4u

  +tablet()
    font-size 20px
    margin-bottom 46px

  +wide()
    font-size 24px

.buttons
  justify-content center
  align-items center
  width 100%

  +tablet()
    flex-direction row