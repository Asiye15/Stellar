_white = #fff
_gray = #636363
_lightGray = #dddddd
_lightBlue = #8cc9f0

.root
  align-items center
  margin-bottom 2u
  border-top-width 1px
  border-top-color _lightGray
  padding 6u 3u 2u 3u

  +tablet()
    padding 8u 6u 4u 6u

  +wide()
    padding 11u 11u 7u 11u

.title
  color _gray
  font-size 32px
  font-weight 300
  margin-bottom 11px

.linearLine
  width 120px
  height 2px
  border-radius 2px
  background-color #a89cc8
  margin 26px 0

  +tablet()
    background-image linear-gradient(90deg, #efa8b0, #a89cc8, #8cc9f0)

.descriptionTitle
  color _gray
  font-weight 300
  text-align center
  font-size 2u
  margin-bottom 4u

  +tablet()
    font-size 20px
    margin-bottom 46px

  +wide()
    font-size 24px

.learnMore, .getStarted
  border-radius 1u
  border 1px solid _lightGray 
  padding 0 3u
  margin-left 2u
  justify-content center
  width 100%
  height 44px

  +tablet()
    width 148px
    height 44px

  +wide()
    width 172px
    height 52px

.getStarted
  background-color _lightBlue
  margin-bottom 14px

  +tablet()
    margin 0  

.learnMoreText, .getStartedText
  color _gray
  font-weight 300
  font-size 16px
  text-align center

  +wide()
    font-size 18px

.getStartedText
  color _white

.buttons
  justify-content center
  align-items center
  width 100%

  +tablet()
    flex-direction row